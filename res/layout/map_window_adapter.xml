<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>

 

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >
   
                <TextView
                    android:id="@+id/bird_name_title"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row1col1" />
                <TextView
                    android:id="@+id/bird_name_field"
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row1col2" />
                
             
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                   android:layout_marginBottom="16dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                      <TextView
                    android:id="@+id/activity_title"
                     android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row2col1" />
                <TextView
                    android:id="@+id/activity_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row2col2" />
                
               
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                  android:layout_marginBottom="16dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                  <TextView
                    android:id="@+id/date_title"
                     android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row3col1" />
                <TextView
                    android:id="@+id/date_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row3col2" />
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                 <TextView
                    android:id="@+id/time_title"
                     android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row4col1" />
                <TextView
                    android:id="@+id/time_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row4col2" />
            </TableRow>
            
             <TableRow
                android:id="@+id/tableRow5"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
             
                 <TextView
                    android:id="@+id/notes_title"
                    android:layout_width="wrap_content"
                     android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    android:text="@string/row5col1" />
                <TextView
                    android:id="@+id/notes_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/row5col2" />
                </TableRow>
        </TableLayout>
        
  
    
</LinearLayout>
