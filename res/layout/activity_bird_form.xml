<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="860dp"
        android:background="@drawable/form_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".BirdFormActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/form_image_button"
                android:layout_width="250dp"
                android:layout_height="185dp"
                android:layout_gravity="center"
                android:contentDescription="@string/bird_picture_description"
                android:src="@drawable/ic_camera2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/common_name_text_view"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/birdName"
               android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/common_name_edit_text"
                style="@style/textHintColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:hint="@string/birdNameHint"
                android:inputType="textPersonName"
                android:maxLength="55" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/scientific_name_text_view"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/scientificName"
               android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/scientific_name_edit_text"
                style="@style/textHintColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:hint="@string/scientificNameHint"
                android:inputType="textPersonName"
                android:maxLength="55" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/noteText"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/noteText"
               android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/notes_edit_text"
                style="@style/textHintColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:hint="@string/notesHint"
                android:inputType="textMultiLine"
                android:maxLength="255"
                android:maxLines="5"
                android:scrollbars="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/dateText"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/dateText"
               android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date_time_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:maxLength="11"
                android:paddingLeft="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/time_title"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/timeText"
               android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hour_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:maxLength="10"
                android:paddingLeft="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/latitude_title"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/latitudeTitle"
               android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/latitude_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="30"
                android:paddingLeft="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/longitude_text"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/longitudeTitle"
               android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/longitude_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="30"
                android:paddingLeft="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/refresh_button"
                style="@style/CoordinateButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/coordinate_button_red"
                android:text="@string/coordinateOutOfDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/category_text"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/categoryText"
               android:textStyle="bold"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/category_drop_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:prompt="@string/categoryPrompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/activity_text"
                style="@style/textColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:text="@string/activityText"
               android:textStyle="bold"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/bird_acivity_dropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:prompt="@string/activityPrompt"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/submit_button"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_button"
                android:onClick="checkFieldsAndNotifyUserOfBlanksBeforeSubmission"
                android:text="@string/submitButtonText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/delete_button"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_button"
                android:onClick="deleteBirdSighting"
                android:text="@string/deleteButtonText" />
        </LinearLayout>
    </TableLayout>

</ScrollView>